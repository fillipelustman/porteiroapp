{
  "expo": {
    "name": "James Avisa",
    "slug": "porteiro-app",
    "version": "1.0.8",
    "scheme": "porteiro-app",
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/logo.png"
    },
    "plugins": [
      "expo-router",
      "expo-web-browser",
      [
        "expo-notifications",
        {
          "color": "#ffffff",
          "defaultChannel": "default"
        }
      ],
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    },
    "orientation": "portrait",
    "icon": "./assets/logo.png",
    "userInterfaceStyle": "light",
    "primaryColor": "#ffffff",
    "backgroundColor": "#F9FAFB",
    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.porteiroapp.notifications",
      "buildNumber": "1.0.8",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "Precisamos acessar a câmera para tirar fotos de visitantes, entregas e documentos dentro do condomínio.",
        "NSMicrophoneUsageDescription": "Precisamos acessar o microfone para gravar áudios e registrar mensagens e ocorrências.",
        "NSPhotoLibraryUsageDescription": "Precisamos acessar sua biblioteca de fotos para selecionar e enviar imagens.",
        "NSPhotoLibraryAddUsageDescription": "Precisamos salvar imagens na sua biblioteca quando você optar por baixar ou salvar fotos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.porteiroapp.notifications",
      "googleServicesFile": "./google-services.json",
      "edgeToEdgeEnabled": true
    },
    "androidStatusBar": {
      "backgroundColor": "#388E3C",
      "barStyle": "light-content"
    },
    "androidNavigationBar": {
      "backgroundColor": "#ffffff"
    },
    "notification": {
      "color": "#ffffff",
      "iosDisplayInForeground": true,
      "androidMode": "default",
      "androidCollapsedTitle": "James Avisa"
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "74e123bc-f565-44ba-92f0-86fc00cbe0b1"
      }
    }
  }
}
